{
  "editor.fontSize": 13,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "FiraCode-Retina, 'Fira code', Menlo, Monaco, 'Courier New', monospace",
  "editor.quickSuggestions": {
    "strings": true
  },
  "explorer.openEditors.visible": 0,
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "welcomePage",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.tabCloseButton": "off",
  "workbench.settings.editor": "json",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "window.newWindowDimensions": "maximized",
  "zenMode.fullScreen": true,
  "search.smartCase": true,
  "javascript.format.enable": true,
  "emmet.triggerExpansionOnTab": true,
  "git.detectSubmodules": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  // ---- extentions settings ---- //
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "workbench.colorTheme": "GitHub Light",
  "workbench.iconTheme": "chalice-icon-theme",
  "gitlens.views.commits.showBranchComparison": false,
  "gitlens.views.commits.avatars": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.branches.avatars": false,
  "diffEditor.renderSideBySide": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.blame.avatars": false,
  "gitlens.blame.highlight.locations": ["overview", "line", "gutter"],
  "gitlens.blame.heatmap.enabled": false,
  "extensions.ignoreRecommendations": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "diffEditor.ignoreTrimWhitespace": false,
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "githubPullRequests.fileListLayout": "tree",
  "workbench.preferredDarkColorTheme": "GitHub Dark",
  "workbench.preferredLightColorTheme": "GitHub Light",
  "window.autoDetectColorScheme": true,
  "files.exclude": {
    "**/package-lock.json": true
  },
  "xo.overrideSeverity": "warn",
  "window.zoomLevel": 0.4
}

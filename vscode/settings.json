{
  "editor.fontSize": 13,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "none",
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.fontFamily": "FiraCode-Retina, 'Fira code', Menlo, Monaco, 'Courier New', monospace",
  "explorer.openEditors.visible": 0,
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": false,
  "workbench.enableExperiments": false,
  "workbench.startupEditor": "welcomePage",
  "workbench.editor.labelFormat": "default",
  "workbench.editor.tabCloseButton": "off",
  "workbench.settings.editor": "json",
  "workbench.panel.defaultLocation": "right",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "window.zoomLevel": 0.2,
  "window.newWindowDimensions": "maximized",
  "zenMode.fullScreen": true,
  "search.smartCase": true,
  "javascript.format.enable": true,
  "emmet.triggerExpansionOnTab": true,
  "git.detectSubmodules": false,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // ---- extentions settings ---- //
  "prettier.eslintIntegration": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "workbench.colorTheme": "Github Light Theme - Gray",
  "workbench.sideBar.location": "left",
  "workbench.iconTheme": "chalice-icon-theme",
  "gitlens.views.commits.showBranchComparison": false,
  "gitlens.views.commits.avatars": false,
  "gitlens.views.fileHistory.avatars": false,
  "gitlens.views.branches.avatars": false,
  "diffEditor.renderSideBySide": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.blame.avatars": false,
  "gitlens.blame.highlight.locations": ["overview", "line", "gutter"],
  "gitlens.blame.heatmap.enabled": false,
  "extensions.ignoreRecommendations": true
}

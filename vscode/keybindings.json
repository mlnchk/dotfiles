[
  /**
   * Activity Bar
   */
  {
    "key": "shift+cmd+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm",
    "when": "workbench.scm.active"
  },

  /**
   * File Explorer
   **/
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "shift+cmd+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !inputFocus"
  },
  {
    "key": "cmd+enter",
    "command": "explorer.openAndPassFocus",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus"
  },
  {
    "key": "cmd+down",
    "command": "-explorer.openAndPassFocus",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsFolder && !inputFocus"
  },

  /**
   * Split
   **/
  {
    "key": "shift+cmd+]",
    "command": "workbench.action.focusNextGroup",
    "when": "editorFocus"
  },
  {
    "key": "shift+cmd+[",
    "command": "workbench.action.focusPreviousGroup",
    "when": "editorFocus"
  },

  /**
   * Git
   **/
  {
    "key": "alt+b",
    "command": "gitlens.toggleLineBlame",
    "when": "editorFocus"
  },

  /**
   * AI Chat
   **/
  //  see: https://github.com/getcursor/cursor/issues/1350#issuecomment-2365180968
  {
    "key": "cmd+]",
    "command": "aichat.newfollowupaction",
    "when": "editorFocus"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.toggleAuxiliaryBar"
  },

  /**
   * Newcomers
   **/
  {},
  // {
  //   "key": "cmd+w",
  //   "command": "workbench.action.terminal.killActiveTab",
  //   "when": "terminalTabsFocus"
  // },
  // {
  //   "key": "cmd+w",
  //   "command": "workbench.action.closeActiveEditor",
  //   "when": "editorFocus"
  // },
  // {
  //   "key": "cmd+w",
  //   "command": "-workbench.action.closeActiveEditor"
  // }
  {
    "key": "cmd+k cmd+k",
    "command": "editor.action.defineKeybinding",
    "when": "resource == 'vscode-userdata:/Users/mlnchk/Library/Application%20Support/Cursor/User/keybindings.json'"
  },
  {
    "key": "cmd+r cmd+k",
    "command": "-editor.action.defineKeybinding",
    "when": "resource == 'vscode-userdata:/Users/mlnchk/Library/Application%20Support/Cursor/User/keybindings.json'"
  },
  {
    "key": "shift+cmd+e",
    "command": "-aichat.fixerrormessage",
    "when": "(arbitrary function)"
  }
]
